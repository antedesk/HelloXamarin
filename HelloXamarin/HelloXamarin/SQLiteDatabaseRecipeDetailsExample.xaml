<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloXamarin.SQLiteDatabaseRecipeDetailsExample"
             
             Title="{Binding Name}">
  <StackLayout VerticalOptions="StartAndExpand" Padding="20">

    <Label Text="Name" />
    <Entry x:Name="nameEntry" Text="{Binding Name}"/>
    <Label Text="Type" />
    <Entry x:Name="notesEntry" Text="{Binding Type}"/>
    <Label Text="Preparation Time" />
    <Entry x:Name="doneEntry" Text="{Binding Time}"/>

    <Button Text="Save" Clicked="saveClicked"/>

    <Button Text="Delete" Clicked="deleteClicked"/>

    <Button Text="Cancel" Clicked="cancelClicked"/>

  </StackLayout>
</ContentPage>